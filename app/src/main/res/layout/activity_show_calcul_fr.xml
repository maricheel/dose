<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    tools:context=".ShowCalculActivity"
    android:useDefaultMargins="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"

        android:background="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"

        android:layout_marginBottom="68dp"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#FFF"
            tools:context=".MainActivity">


            <LinearLayout

                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"

                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liste Aliment"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="21dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TableLayout
                    android:id="@+id/mytable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="#dcdde1">

                    <TableRow android:id="@+id/ro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:id="@+id/pre"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#131313"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:text="Aliments"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#131313"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#ffffff"
                            android:text="Quantité"
                            android:textSize="16sp"
                            />


                        <TextView
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:id="@+id/hihi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#131313"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:text="Quantité de glucose"
                            android:gravity="center"
                            android:textSize="16sp"
                            />
                    </TableRow>



                </TableLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="40dp"

                    android:background="@drawable/rectangle187">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="21dp"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Glucose dans un repas"
                            android:layout_marginLeft="20dp"

                            android:textColor="#2B3FEE" />

                        <TextView
                            android:id="@+id/name_edit_textg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text="12.26"
                            android:textColor="#000000" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="21dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Unité de correction"
                            android:layout_marginLeft="20dp"

                            android:textColor="#2B3FEE" />

                        <TextView
                            android:id="@+id/uc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text="48.0"
                            android:textColor="#000000" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="21dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Unité de repas"
                            android:layout_marginLeft="20dp"

                            android:textColor="#2B3FEE" />

                        <TextView
                            android:id="@+id/ur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text="0.2565"
                            android:textColor="#000000" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="21dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Insuline à injecter"
                            android:layout_marginLeft="20dp"

                            android:textColor="#2B3FEE" />

                        <TextView
                            android:id="@+id/name_edit_text1g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text="48.2"
                            android:textColor="#000000" />


                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Le pourcentage de  insulines injectées"
                    android:paddingRight="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_edit_text2g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="insuline pour injection"
                        android:inputType="numberDecimal"

                        android:background="@drawable/rectangle170"/>


                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/ectangle159"
                    android:text="Enregistrer"
                    android:onClick="onClickConfirm"
                    android:textColor="#fff" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:gravity="left"
        android:background="@color/white"
        android:elevation="5dp"
        android:paddingLeft="25dp"
        android:paddingTop="11dp"
        android:paddingBottom="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="46dp"
        android:layout_height="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="25dp"
        android:elevation="100dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <com.tbuonomo.morphbottomnavigation.MorphBottomNavigationView
        android:id="@+id/bottomNavigationView"
        style="@style/BottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:backgroundTint="#2b3fee"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_items"
        app:morphCornerRadius="128dp"
        app:morphItemRadius="64dp"
        app:morphVerticalOffset="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>